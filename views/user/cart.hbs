<h1 class="mt-5 text-center navbar-brand mb-3 mb-5">Cart</h1>
{{#if data.emptycart }}
<h2 class="text-center">Cart is empty</h2>
{{else}}
<table class="table">
  <tr>
    <th>Image</th> <th>Service</th> <th>Quantity</th> <th>Price Per Product</th>
  </tr>
  <tr>
    
    {{#each data.servicesdetails}}

    <td>
        <img src="/service-images/{{this.services._id}}.jpg" height="100px" width="90px">
    </td>
    <td>{{this.services.title}}</td>
    <td><a href="/decrementSer?id={{this.services._id}}"><button>-</button></a><strong> {{this.quantity}} </strong><a href="/incrementSer?id={{this.services._id}}"><button>+</button></a></span> </td>
    <td>{{this.services.price}} RS</td>
    <td><a href="/deleteCart?id={{this.services._id}}"><button type="button" class="btn btn-danger" >Remove</button></a></td>
  </tr>
  {{/each}}
</table>

{{/if}}