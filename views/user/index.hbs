      <input type="email" class="form-control rounded-pill custom-input" id="email" name="email" required>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 py-2">Submit</button>
    </div>
  </form>
